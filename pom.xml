    </dependencies>
    <build>
        <finalName>${project.artifactId}</finalName>
    <resources>
      <resource>
        <directory>C:\ydosppa\application-stack-intro\src\main\resources</directory>
      </resource>
      <resource>
        <directory>C:\ydosppa\application-stack-intro\src\main\resfilt</directory>
        <filtering>true</filtering>
      </resource>
      <resource>
        <directory>C:\ydosppa\application-stack-intro\src\main\resf2</directory>
        <filtering>true</filtering>
      </resource>
    </resources>

        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <version>${version.maven-war-plugin}</version>
                    			<configuration>
					<failOnMissingWebXml>false</failOnMissingWebXml>
					<packagingExcludes>pom.xml</packagingExcludes>
					<!-- Overlay configuration start
					<overlays> 
						<overlay> 
						</overlay> 
					</overlays> 
					Overlay configuration end -->

					<!-- Filtered directory start
					Filtered directory end -->
